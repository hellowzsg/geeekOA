/* 时间选择器 */

.section {
  margin: 20rpx 0 0;
  padding: 30rpx 20rpx;
  font-size: 36rpx;
  background-color: #fff;
  border-radius: 10rpx;
  color: #707070;
  display: flex;
  justify-content: space-around;
}

.section picker {
  text-align: center;
  width: 50%;
}

.section picker:first-child {
  border-right: 1px solid #dfdfdf;
}

