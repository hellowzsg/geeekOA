/* 时间选择器 */

.select-time {
  padding: 20rpx;
  background-color: #fff;
  border-radius: 2rpx;
  margin: 20rpx 0;
}

.select-time picker {
  width: 60%;
  display: inline-block;
  text-align: center;
}

.time-picker {
  padding: 0 20rpx;
}

.select-time-ctrl {
  width: 40%;
  display: inline-block;
  text-align: right;
}

.select-time-ctrl-down, .select-time-ctrl-up {
  padding: 0 40rpx;
  color: #afafaf;
  font-size: 40rpx;
  vertical-align: top;
}

