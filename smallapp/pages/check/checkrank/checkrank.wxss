/* 顶部我的排名 */

.rank {
  width: 100%;
  height: 300rpx;
  background-color: #7aa8f8;
  padding-top: 60rpx;
  border-radius: 10rpx;
}

.myimage {
  width: 160rpx;
  height: 160rpx;
  border-radius: 100%;
  overflow: hidden;
  margin: 0 auto 20rpx;
  background-color: #fff;
  box-shadow: 0 0 6rpx 4rpx rgba(220, 220, 220, 0.5);
}

.ranking {
  text-align: center;
  color: #fff;
  font-size: 50rpx;
}

